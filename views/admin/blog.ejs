<!-- views/blog.ejs -->
<section class="page-header">
    <div class="container">
        <h1>News & Updates</h1>
        <p>Stay informed about our ongoing projects and community impact</p>
    </div>
</section>

<section class="blog-section">
    <div class="container">
        <% if (posts && posts.length > 0) { %>
            <div class="blog-grid">
                <% posts.forEach(post => { %>
                <article class="blog-card">
                    <% if (post.image_url) { %>
                    <div class="blog-image">
                        <img src="<%= post.image_url %>" alt="<%= post.title %>">
                    </div>
                    <% } %>
                    <div class="blog-content">
                        <h2><%= post.title %></h2>
                        <p><%= post.content.substring(0, 200) %>...</p>
                        <div class="blog-meta">
                            <span class="author">By <%= post.author %></span>
                            <span class="date"><%= new Date(post.created_at).toLocaleDateString() %></span>
                        </div>
                        <a href="/blog/<%= post.id %>" class="btn btn-outline">Read Full Article</a>
                    </div>
                </article>
                <% }) %>
            </div>
        <% } else { %>
            <div style="text-align: center; padding: 60px 20px;">
                <h3>No posts available at the moment</h3>
                <p>Check back soon for updates on our latest projects and initiatives.</p>
            </div>
        <% } %>
    </div>
</section>